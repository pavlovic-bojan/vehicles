# Database (required)
# PostgreSQL connection string for local development
DATABASE_URL="postgresql://username:password@localhost:5432/vehicles_db"

# Auth (required)
# Minimum 32 characters for JWT signing
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"

# Optional: session / cookie secret
SESSION_SECRET="session-secret-change-in-production"

# Server
PORT=4000
NODE_ENV=development

# OAuth – Google (optional; leave empty to disable Google login)
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# OAuth – Facebook (optional; leave empty to disable Facebook login)
# Create app at https://developers.facebook.com/
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# Dev-only: secret for POST /api/auth/dev (optional; set to enable dev login)
# DEV_AUTH_SECRET=your-dev-secret
